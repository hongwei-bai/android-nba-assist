<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/ColorBackground"
    tools:context=".compat.view.MainCompatActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dashboard_loading_spinner_height"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/topBar"
                style="@style/Style.Nba.Bar"
                android:layout_width="0dp"
                android:layout_height="@dimen/dashboard_loading_spinner_height"
                android:layout_weight="1" />

            <View
                style="@style/Style.Nba.BarBackground"
                android:layout_width="0dp"
                android:layout_height="@dimen/dashboard_loading_spinner_height"
                android:layout_weight="3" />
        </LinearLayout>

        <ImageView
            android:id="@+id/teamBanner"
            style="@style/Style.Nba.Banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dashboard_loading_spinner_height"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dashboard_card_shadow_height"
            android:background="@drawable/bg_shadow"
            app:layout_constraintTop_toBottomOf="@id/teamBanner" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/loadingSpinner"
            style="@style/Style.Nba.ProgressBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dashboard_loading_spinner_height"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/teamBanner"
            app:layout_constraintVertical_bias="0.4"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/gamesLeftCaption"
            style="@style/TextAppearance.Nba.Dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/gamesLeftNumber"
            app:layout_constraintTop_toBottomOf="@id/teamBanner"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Games Left" />

        <TextView
            android:id="@+id/gamesLeftNumber"
            style="@style/TextAppearance.Nba.Dashboard.Active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintBaseline_toBaselineOf="@id/gamesLeftCaption"
            app:layout_constraintEnd_toStartOf="@id/gamesLeftCaption"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="82" />

        <TextView
            android:id="@+id/upcomingGameInDayCaption"
            style="@style/TextAppearance.Nba.Dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gamesLeftCaption"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Upcoming game in" />

        <TextView
            android:id="@+id/upcomingGameInDayValue"
            style="@style/TextAppearance.Nba.Dashboard.Active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/upcomingGameInDayCaption"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="2 days" />

        <LinearLayout
            android:id="@+id/nextGameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_top_rounded_rect_card"
            android:paddingStart="12dp"
            android:paddingTop="16dp"
            android:paddingEnd="12dp"
            android:paddingBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/upcomingGameInDayValue"
            app:layout_constraintVertical_bias="0.16">

            <ImageView
                android:id="@+id/guestTeamLogo"
                android:layout_width="@dimen/dashboard_team_logo_width"
                android:layout_height="@dimen/dashboard_team_logo_width"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                app:layout_constraintHorizontal_chainStyle="packed" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/gameMiddleLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                app:layout_constraintHorizontal_chainStyle="packed">

                <TextView
                    android:id="@+id/gameDate"
                    style="@style/TextAppearance.Nba.Dashboard.Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="TUE, OCT 17" />

                <TextView
                    android:id="@+id/at"
                    style="@style/TextAppearance.Nba.Dashboard.At"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="1dp"
                    android:paddingBottom="3dp"
                    android:text="@string/game_vs_at"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toTopOf="@id/gameTime"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/gameDate" />

                <TextView
                    android:id="@+id/gameTime"
                    style="@style/TextAppearance.Nba.Dashboard.Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/at"
                    tools:text="9:30 PM" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/homeTeamLogo"
                android:layout_width="@dimen/dashboard_team_logo_width"
                android:layout_height="@dimen/dashboard_team_logo_width"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                app:layout_constraintHorizontal_chainStyle="packed" />

        </LinearLayout>

        <View
            android:id="@+id/nextGameShadow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dashboard_card_shadow_height"
            android:background="@drawable/bg_shadow"
            app:layout_constraintTop_toBottomOf="@id/nextGameLayout" />

        <TextView
            style="@style/TextAppearance.Nba.Neutral.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/date_is_up_to_date_copy"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/errorText"
            style="@style/TextAppearance.Nba.Error.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/dashboard_load_error"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/teamBanner" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>