<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="?attr/ColorBackgroundDeepFade"
    android:paddingEnd="8dp">

    <TextView
        android:id="@+id/rank"
        style="@style/TextAppearance.Nba.Standing.Data"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="12" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/standing_team_logo_width"
        android:layout_height="@dimen/standing_team_logo_width"
        android:layout_marginStart="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/lal" />

    <TextView
        android:id="@+id/team"
        style="@style/TextAppearance.Nba.Standing.Team"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/logo"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="GS" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/team"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/wins"
            style="@style/TextAppearance.Nba.Standing.Data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="41" />

        <TextView
            android:id="@+id/losses"
            style="@style/TextAppearance.Nba.Standing.Data"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:text="20" />

        <TextView
            android:id="@+id/pct"
            style="@style/TextAppearance.Nba.Standing.Data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            tools:text=".672" />

        <TextView
            android:id="@+id/gamesBack"
            style="@style/TextAppearance.Nba.Standing.Data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="1.5" />

        <TextView
            android:id="@+id/ppgDiff"
            style="@style/TextAppearance.Nba.Standing.Data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="+4.5" />

        <TextView
            android:id="@+id/streak"
            style="@style/TextAppearance.Nba.Standing.Data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="W2" />

        <TextView
            android:id="@+id/l10"
            style="@style/TextAppearance.Nba.Standing.Data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="6-4" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>