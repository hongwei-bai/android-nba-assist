<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="?attr/ColorBackgroundDeepFade"
    android:paddingEnd="8dp">

    <TextView
        android:id="@+id/rank"
        style="@style/TextAppearance.Nba.Standing.Header"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/team"
        style="@style/TextAppearance.Nba.Standing.Header"
        android:layout_width="@dimen/standing_team_header_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/rank"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/team"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/wins"
            style="@style/TextAppearance.Nba.Standing.Header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="W" />

        <TextView
            android:id="@+id/losses"
            style="@style/TextAppearance.Nba.Standing.Header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="L" />

        <TextView
            android:id="@+id/pct"
            style="@style/TextAppearance.Nba.Standing.Header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="PCT" />

        <TextView
            android:id="@+id/gamesBack"
            style="@style/TextAppearance.Nba.Standing.Header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="GB" />

        <TextView
            android:id="@+id/ppgDiff"
            style="@style/TextAppearance.Nba.Standing.Header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PD" />

        <TextView
            android:id="@+id/streak"
            style="@style/TextAppearance.Nba.Standing.Header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="S" />

        <TextView
            android:id="@+id/l10"
            style="@style/TextAppearance.Nba.Standing.Header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="L10" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>